{% extends 'base.html.twig' %}

{% block title %}Fil index{% endblock %}

{% block body %}
    <h1>Fil index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Marque</th>
                <th>Nom</th>
                <th>Taille</th>
                <th>Resistance</th>
                <th>Quantite</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for fil in fils %}
            <tr>
                <td>{{ fil.id }}</td>
                <td>{{ fil.Marque }}</td>
                <td>{{ fil.Nom }}</td>
                <td>{{ fil.taille }}</td>
                <td>{{ fil.resistance }}</td>
                <td>{{ fil.quantite }}</td>
                <td>
                    <a href="{{ path('app_fil_show', {'id': fil.id}) }}">show</a>
                    <a href="{{ path('app_fil_edit', {'id': fil.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_fil_new') }}">Create new</a>
{% endblock %}
